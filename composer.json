{
    "name": "yannelli/entry-vault-laravel",
    "description": "A Laravel 12 package for building a backend-only entry/resource library system with multi-tenancy, versioning, and state management",
    "keywords": [
        "yannelli",
        "laravel",
        "entry-vault",
        "entries",
        "resources",
        "library",
        "versioning",
        "multi-tenancy"
    ],
    "homepage": "https://github.com/yannelli/entry-vault-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Yannelli",
            "email": "ryanyannelli@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/support": "^12.0",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-model-states": "^2.12",
        "overtrue/laravel-versionable": "^5.5"
    },
    "suggest": {
        "filament/filament": "Required for the Filament admin panel integration (^3.0)"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "filament/filament": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Yannelli\\EntryVault\\": "src/",
            "Yannelli\\EntryVault\\Database\\Factories\\": "database/factories/",
            "Yannelli\\EntryVault\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yannelli\\EntryVault\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Yannelli\\EntryVault\\EntryVaultServiceProvider"
            ],
            "aliases": {
                "EntryVault": "Yannelli\\EntryVault\\Facades\\EntryVault"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
